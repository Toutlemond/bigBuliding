{% extends 'base.html.twig' %}

{% block title %}Это дом - {{ house.name }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Это дом - {{ house.name }}! ✅</h1>

<ul>
    <li> Построен {{ house.startYear|date("d.m.Y") }} </li>
    <li> Расположен {{ house.address }}  </li>
</ul>
    <hr>
    <h3>Владелец</h3>
    {{ user.name }} {{ user.surname }} {{ user.city }}
    {{ dump(house) }}
<a class="btn btn-success" href="#">Нажмика</a>
</div>
    {% block javascripts %}
        {{ parent() }}
        {{ encore_entry_script_tags('house') }}
    {% endblock %}
{% endblock %}
